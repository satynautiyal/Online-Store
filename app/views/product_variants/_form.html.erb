<div class="flex justify-center my-2 mx-4 md:mx-0 ">
  <div class="w-full max-w-xl bg-white rounded-lg shadow-md p-6">
    <%= form_with(model: product_variant) do |form| %>
      <% if product_variant.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(product_variant.errors.count, "error") %> prohibited this product_variant from being saved:</h2>
          <ul>
            <% product_variant.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full md:w-full px-3 mb-6">
            <%= form.label :batch_no, class: "devise-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
            <%= form.text_field :batch_no, autofocus: true, autocomplete: "name", class:"appearance-none block w-full bg-white text-gray-900 font-medium border border-gray-400 rounded-lg py-3 px-3 leading-tight focus:outline-none" %>
        </div>
        <div class="w-full md:w-full px-3 mb-6">
            <%= form.label :weight, class: "devise-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
            <%= form.text_area :weight, autofocus: true, autocomplete: "name", class:"appearance-none block w-full bg-white text-gray-900 font-medium border border-gray-400 rounded-lg py-3 px-3 leading-tight focus:outline-none" %>
        </div>
        <div class="w-full md:w-full px-3 mb-6">
            <%= form.label :price, class: "devise-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
            <%= form.text_field :price, autofocus: true, autocomplete: "name", class:"appearance-none block w-full bg-white text-gray-900 font-medium border border-gray-400 rounded-lg py-3 px-3 leading-tight focus:outline-none" %>
        </div>
        <div class="w-full md:w-full px-3 mb-6">
            <%= form.label :quantity, class: "devise-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
            <%= form.number_field :quantity, autofocus: true, autocomplete: "name", class:"appearance-none block w-full bg-white text-gray-900 font-medium border border-gray-400 rounded-lg py-3 px-3 leading-tight focus:outline-none" %>
        </div>
        <div class="w-full md:w-full px-3 mb-6">
            <%= form.label :expiry, class: "devise-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
            <%= form.date_field :expiry, autofocus: true, autocomplete: "name", class:"appearance-none block w-full bg-white text-gray-900 font-medium border border-gray-400 rounded-lg py-3 px-3 leading-tight focus:outline-none" %>
        </div>
        <div class="w-full md:w-full px-3 mb-6">
            <%= form.label :product_id, class: "devise-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
            <%= form.select(:product_id, Product.pluck(:name, :id), :selected => params[:pid]) %>
        </div>
        <div class="w-full md:w-full px-3 mb-6">
            <%= form.label :main_image,"Images", class: "devise-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
            <%= form.file_field :main_image, autocomplete: "name", class:"appearance-none block w-full bg-white text-gray-900 font-medium border border-gray-400 rounded-lg py-3 px-3 leading-tight focus:outline-none" %>
        </div>
        <div class="w-full md:w-full px-3 mb-6">
            <%= form.label :other_images,"Images", class: "devise-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
            <%= form.file_field :other_images, multiple: true, autocomplete: "name", class:"appearance-none block w-full bg-white text-gray-900 font-medium border border-gray-400 rounded-lg py-3 px-3 leading-tight focus:outline-none" %>
        </div>
        <div class="actions">
          <%= form.submit class: "appearance-none block w-25 bg-green-600 font-bold border border-gray-200 rounded-lg py-3 px-3 leading-tight hover:bg-green-500 focus:outline-none focus:bg-white focus:border-gray-500 text-white" %>
        </div>
      </div>
    <% end %>
  </div>
</div>