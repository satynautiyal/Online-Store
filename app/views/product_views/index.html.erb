<p id="notice"><%= notice %></p>
<div class="container mx-auto mt-4">
  <%= link_to 'New Product View', new_product_view_path, class: "mb-6 appearance-none block w-full bg-green-600 text-gray-100 font-bold border border-gray-200 rounded-lg py-3 px-3 leading-tight hover:bg-green-500 focus:outline-none focus:bg-green-500 focus:border-gray-500 text-center" if(user_signed_in? && current_user.role != "buyer") %>
  <% if ProductView.all.length != 0 %>
    <div class="flex flex-col">
      <div class="grid grid-cols-12 gap-4">
        <div class="col-span-3">
          <p class="text-5xl">Product Views</p>
        </div>
      </div>

      <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
          <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
            <table class="min-w-full divide-y divide-gray-200 mt-4">
              <thead class="bg-gray-50">
                <tr>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Name
                  </th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Description
                  </th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Duration
                  </th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Price
                  </th>
                  <th colspan="3" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  </th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @product_views.each do |product_view| %>
                  <tr>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <%= product_view.viewable_id %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <%= product_view.user_ip %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <%= link_to 'Show', product_view %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <%= link_to 'Edit', edit_product_view_path(product_view) %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <%= link_to 'Destroy', product_view, method: :delete, data: { confirm: 'Are you sure?' } %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<br>