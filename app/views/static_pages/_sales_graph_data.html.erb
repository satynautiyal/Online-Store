<div class="px-4 py-4 mx-auto m-5"  style="background-color:white;width:80%">    
    <div class="text-2xl mb-5">
        <% sales_of_graph_by() %>
        Sales Data 
        <%= @sales_group_by %>
    </div>
    <div class="float-right">
        <%= select_tag("Sales of",options_for_select(["Yearly","Monthly","Weekly","Daily"],@sales_group_by),id: "dropdown_sales") %>
    </div>
      <%= line_chart @sales_data, id: "sales_chart" %>
</div>

<script>
    $("#dropdown_sales").on("change",function() {
        $.ajax({
            url: "../static_pages/sales_graph_data",
            data: "sales_group_by="+$("#dropdown_sales").val(),
            type: "get"
        })
        })
</script>