<div class="container mx-auto mt-4">
  <%= link_to 'Add a New Service', new_product_service_path, class: "mb-6 appearance-none block w-full bg-green-600 text-white font-bold border border-gray-200 rounded-lg py-3 px-3 leading-tight hover:bg-green-500 focus:outline-none focus:bg-green-500 focus:border-gray-500 text-center" if(user_signed_in? && current_user.role != "buyer") %>
  <% if ProductService.all.length != 0 %>
    <div class="flex flex-col">
      <div class="grid grid-cols-12 gap-4">
        <div class="col-span-3">
          <p class="text-5xl">Services</p>
        </div>
      </div>
      <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
          <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
            <table class="min-w-full divide-y divide-gray-200 mt-4">
              <thead class="bg-gray-50">
                <tr>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Name
                  </th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Description
                  </th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Duration
                  </th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Price
                  </th>
                  <th colspan="3" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  </th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @product_services.each do |product_service| %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <div class="ml-4">
                        <div class="text-sm font-medium text-gray-900">
                          <%= product_service.name %>
                        </div>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <%= product_service.description %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <%= product_service.duration %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <%= product_service.price %>
                  </td>
                  <td>
                    <%= link_to 'Show', product_service, class: "text-blue-600 hover:text-blue-600"  %>
                  </td>
                  <td>
                    <%= link_to 'Edit', edit_product_service_path(product_service),class: "text-green-600 hover:text-green-600" if user_signed_in? && policy(product_service).edit? %>
                  </td>
                  <td>
                    <% if !product_service.discarded? %>
                      <%= link_to 'Delete', soft_destroy_product_service_path(id: product_service.id), method: :post, data: { confirm: 'Are you sure?' },class: "text-red-600 hover:text-delete-600"  if user_signed_in? && policy(product_service).soft_destroy? %>
                    <% else %>
                          <%=link_to "Undelete", restore_soft_deleted_product_service_path(id: product_service.id), data: { confirm: "Are you sure?" }, method: :post, class: "bg-inherit text-green-600 hover:text-green-600 visited:text-green-700", data: { confirm: "Are you sure?"} if policy(product).restore_soft_deleted? %>
                        <% end %>
                    <% if user_signed_in? && current_user.role == "admin" && product_service.discarded? %>
                      <%= link_to 'Permanent Delete', product_service, method: :delete, data: { confirm: 'Are you sure?' },class: "text-red-600 hover:text-delete-600"  if user_signed_in? && policy(product).destroy? %>
                  </td>
                  <% end %>
                </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <br>
  <% end %>
</div>
