<div class="flex justify-center my-2 mx-4 md:mx-0 ">
  <div class="w-full max-w-xl bg-white rounded-lg shadow-md p-6">
    <%= form_with(model: product_service) do |form| %>
      <% if product_service.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(product_service.errors.count, "error") %> prohibited this product_service from being saved:</h2>

          <ul>
            <% product_service.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full md:w-full px-3 mb-6">
            <%= form.label :category_id, class: "mr-4 devise-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
            <%= form.select(:category_id,Category.where('category_of = 1').pluck(:name, :id), prompt: "Select Category")%>
        </div>
        <div class="w-full md:w-full px-3 mb-6">
            <%= form.label :name, class: "devise-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
            <%= form.text_field :name, autofocus: true, autocomplete: "name", class:"appearance-none block w-full bg-white text-gray-900 font-medium border border-gray-400 rounded-lg py-3 px-3 leading-tight focus:outline-none" %>
        </div>
        <div class="w-full md:w-full px-3 mb-6">
            <%= form.label :description, class: "devise-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
            <%= form.text_area :description, autofocus: true, autocomplete: "name", class:"appearance-none block w-full bg-white text-gray-900 font-medium border border-gray-400 rounded-lg py-3 px-3 leading-tight focus:outline-none" %>
        </div>
        <div class="w-full md:w-full px-3 mb-6">
            <%= form.label :duration, class: "devise-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
            <%= form.number_field :duration,placeholder: "in minutes", autofocus: true, autocomplete: "name", class:"appearance-none block w-full bg-white text-gray-900 font-medium border border-gray-400 rounded-lg py-3 px-3 leading-tight focus:outline-none"%>
        </div>
        <div class="w-full md:w-full px-3 mb-6">
            <%= form.label :start_time, class: "devise-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
            <%= form.time_field :start_time,placeholder: "in minutes", autofocus: true, autocomplete: "name", class:"appearance-none block w-full bg-white text-gray-900 font-medium border border-gray-400 rounded-lg py-3 px-3 leading-tight focus:outline-none"%>
        </div>
        <div class="w-full md:w-full px-3 mb-6">
            <%= form.label :end_time, class: "devise-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
            <%= form.time_field :end_time,placeholder: "in minutes", autofocus: true, autocomplete: "name", class:"appearance-none block w-full bg-white text-gray-900 font-medium border border-gray-400 rounded-lg py-3 px-3 leading-tight focus:outline-none" %>
        </div>
        <div class="w-full md:w-full px-3 mb-6">
            <%= form.label :price, class: "devise-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
            <%= form.number_field :price, autofocus: true, autocomplete: "name", class:"appearance-none block w-full bg-white text-gray-900 font-medium border border-gray-400 rounded-lg py-3 px-3 leading-tight focus:outline-none"%>
        </div>
        <div class="actions">
          <%= form.submit class: "appearance-none block w-25 bg-green-600 font-bold border border-gray-200 rounded-lg py-3 px-3 leading-tight hover:bg-green-500 focus:outline-none focus:bg-white focus:border-gray-500 text-white" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
