<% if user_signed_in? %>
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Title:</strong>
    <%= @notification.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= @notification.content %>
  </p>

  <p>
    <strong>Notification of:</strong>
    <%= @notification.notifiable_id %>
  </p>

  <%= link_to 'Edit', edit_notification_path(@notification) %> |
  <%= link_to 'Back', notifications_path %>
<% end %>
