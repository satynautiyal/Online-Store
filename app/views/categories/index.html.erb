<p id="notice"><%= notice %></p>
<div class="container mx-auto mt-4">
  <%= link_to 'New Category', new_category_path, class: "mb-6 appearance-none block w-full bg-green-600 text-white font-bold border border-gray-200 rounded-lg py-3 px-3 leading-tight hover:bg-green-500 focus:outline-none focus:bg-green-500 focus:border-gray-500 text-center" if(user_signed_in? && current_user.role != "buyer") %>
  <% if Category.all.length != 0 %>
    <div class="flex flex-col">
      <div class="grid grid-cols-12 gap-4">
        <div class="col-span-3">
          <p class="text-5xl">Categories</p>
        </div>
      </div>

      <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
          <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
            <table class="min-w-full divide-y divide-gray-200 mt-4">
              <thead class="bg-gray-50">
                <tr>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Name
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Category
                    </th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @categories.each do |category| %>
                  <tr>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <%= category.name %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <%= category.category_of %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <%= link_to 'Show', category if user_signed_in? && policy(category).show? %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <%= link_to 'Edit', edit_category_path(category) if user_signed_in? && policy(category).edit? %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } if user_signed_in? && policy(category).destroy? %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<br>

