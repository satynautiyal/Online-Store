<div class="text-center mt-4">
      <div class="flex items-center justify-center">
         <i class="fa fa-lock" style="font-size:48px;color:blue"></i>
      </div>
      <h2 class="text-4xl tracking-tight">
         Sign in into your account
      </h2>
      <span class="text-sm">or <a href="/users/sign_up" class="bg-inherit" style="color: #3b82f6"> 
         register a new account
      </a>
   </span>
</div>
<div class="flex justify-center my-2 mx-4 md:mx-0 ">
  <div class="w-full max-w-xl bg-white rounded-lg shadow-md p-6">
   <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="flex flex-wrap -mx-3 mb-6">
         <div class="w-full md:w-full px-3 mb-6">
            <%= f.label :email, class: "devise-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"appearance-none block w-full bg-white text-gray-900 font-medium border border-gray-400 rounded-lg py-3 px-3 leading-tight focus:outline-none", type:'email' %>
         </div>
         <div class="w-full md:w-full px-3 mb-6">
            <%= f.label :password, class: "devise-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class:"appearance-none block w-full bg-white text-gray-900 font-medium border border-gray-400 rounded-lg py-3 px-3 leading-tight focus:outline-none", type:'password' %>
         </div>
         <div class="w-full flex items-center justify-between px-3 mb-3 ">
            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.label :remember_me, class: "inline"%>
                <%= f.check_box :remember_me %>
              </div>
            <% end %>
            <div class="w-1/2 text-right">
              <a href="/users/password/new" class="bg-inherit" style="color: #3b82f6">Forgot your password?</a>
            </div>
         </div>
         <div class="w-full md:w-full px-3 mb-6">
            <%= f.submit "Sign in", class:"appearance-none block w-full bg-blue-600 text-gray-100 font-bold border border-gray-200 rounded-lg py-3 px-3 leading-tight hover:bg-blue-500 focus:outline-none focus:bg-white focus:border-gray-500" %>
         </div>
      </div>
   <% end %>
  </div> 
</div>